#!/bin/bash
# .git/hooks/post-commit (generated by scout init)
# Install: cp devtools/git-hooks/post-commit .git/hooks/post-commit && chmod +x .git/hooks/post-commit
REPO_ROOT="$(cd "$(git rev-parse --show-toplevel)" && pwd)"
source "$REPO_ROOT/devtools/_internal/common/utils.sh"
cd "$REPO_ROOT"
git diff-tree --no-commit-id --name-only -r HEAD | $(find_python "$REPO_ROOT") -m vivarium.scout on-commit
