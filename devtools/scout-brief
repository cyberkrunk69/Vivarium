#!/bin/bash
# devtools/scout-brief â€” Scout Investigation Plan CLI
# Generates comprehensive briefings for expensive models with git context,
# dependencies, and "Recommended Deep Model Prompt" section.
set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
# shellcheck source=_internal/common/utils.sh
source "$SCRIPT_DIR/_internal/common/utils.sh"
load_dotenv "$REPO_ROOT"

cd "$REPO_ROOT"
PYTHON=$(find_python "$REPO_ROOT")
exec "$PYTHON" -m vivarium.scout.cli.brief "$@"
