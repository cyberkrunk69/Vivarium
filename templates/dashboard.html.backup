<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Swarm Monitoring Dashboard</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
            background: #0d1117;
            color: #c9d1d9;
            line-height: 1.6;
        }

        .header {
            background: #161b22;
            padding: 1rem;
            border-bottom: 1px solid #30363d;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header h1 {
            color: #58a6ff;
            text-align: center;
        }

        .status-bar {
            background: #21262d;
            padding: 0.5rem 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #30363d;
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #3fb950;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        .container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            padding: 1rem;
            max-width: 1600px;
            margin: 0 auto;
        }

        .panel {
            background: #161b22;
            border: 1px solid #30363d;
            border-radius: 6px;
            overflow: hidden;
        }

        .panel-header {
            background: #21262d;
            padding: 1rem;
            border-bottom: 1px solid #30363d;
            font-weight: bold;
        }

        .panel-content {
            padding: 1rem;
            max-height: 400px;
            overflow-y: auto;
        }

        .worker {
            background: #0d1117;
            border: 1px solid #30363d;
            border-radius: 4px;
            padding: 1rem;
            margin-bottom: 0.5rem;
        }

        .worker-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .worker-id {
            color: #58a6ff;
            font-weight: bold;
        }

        .worker-status {
            padding: 2px 8px;
            border-radius: 3px;
            font-size: 0.8rem;
        }

        .status-active {
            background: #3fb950;
            color: #000;
        }

        .status-completed {
            background: #6f42c1;
            color: #fff;
        }

        .worker-task {
            color: #8b949e;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .worker-meta {
            display: flex;
            justify-content: space-between;
            font-size: 0.8rem;
            color: #8b949e;
        }

        .experiment {
            background: #0d1117;
            border: 1px solid #30363d;
            border-radius: 4px;
            padding: 1rem;
            margin-bottom: 0.5rem;
        }

        .experiment-name {
            color: #f85149;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .experiment-preview {
            background: #21262d;
            padding: 0.5rem;
            border-radius: 3px;
            font-size: 0.8rem;
            color: #8b949e;
            max-height: 80px;
            overflow: hidden;
            white-space: pre-wrap;
        }

        .pending-change {
            background: #0d1117;
            border: 1px solid #d29922;
            border-radius: 4px;
            padding: 1rem;
            margin-bottom: 0.5rem;
        }

        .change-description {
            color: #d29922;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .change-files {
            color: #8b949e;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .approve-btn {
            background: #238636;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .approve-btn:hover {
            background: #2ea043;
        }

        .cost-summary {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .cost-metric {
            background: #21262d;
            padding: 1rem;
            border-radius: 4px;
            text-align: center;
        }

        .cost-value {
            font-size: 1.5rem;
            color: #58a6ff;
            font-weight: bold;
        }

        .cost-label {
            color: #8b949e;
            font-size: 0.9rem;
        }

        .session-costs {
            max-height: 200px;
            overflow-y: auto;
        }

        .session-cost {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem;
            border-bottom: 1px solid #30363d;
        }

        .refresh-btn {
            background: #1f6feb;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 1rem;
        }

        .refresh-btn:hover {
            background: #388bfd;
        }

        .full-width {
            grid-column: 1 / -1;
        }

        .last-updated {
            font-size: 0.8rem;
            color: #8b949e;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>ðŸ§  Swarm Monitoring Dashboard</h1>
    </div>

    <div class="status-bar">
        <div class="status-indicator">
            <div class="status-dot"></div>
            <span>Connected</span>
            <button class="refresh-btn" onclick="refreshAll()">Refresh All</button>
        </div>
        <div class="last-updated" id="lastUpdated">Last updated: Never</div>
    </div>

    <div class="container">
        <!-- Active Workers Panel -->
        <div class="panel">
            <div class="panel-header">
                Active Workers (<span id="workerCount">0</span>)
            </div>
            <div class="panel-content" id="workersPanel">
                <div style="text-align: center; color: #8b949e;">Loading workers...</div>
            </div>
        </div>

        <!-- Recent Experiments Panel -->
        <div class="panel">
            <div class="panel-header">
                Recent Experiments (<span id="experimentCount">0</span>)
            </div>
            <div class="panel-content" id="experimentsPanel">
                <div style="text-align: center; color: #8b949e;">Loading experiments...</div>
            </div>
        </div>

        <!-- Pending Changes Panel -->
        <div class="panel">
            <div class="panel-header">
                Pending Changes (<span id="changesCount">0</span>)
            </div>
            <div class="panel-content" id="changesPanel">
                <div style="text-align: center; color: #8b949e;">Loading changes...</div>
            </div>
        </div>

        <!-- Cost Tracking Panel -->
        <div class="panel">
            <div class="panel-header">
                Cost Tracking
            </div>
            <div class="panel-content" id="costsPanel">
                <div class="cost-summary">
                    <div class="cost-metric">
                        <div class="cost-value" id="totalCost">$0.00</div>
                        <div class="cost-label">Total Cost</div>
                    </div>
                    <div class="cost-metric">
                        <div class="cost-value" id="activeSessions">0</div>
                        <div class="cost-label">Active Sessions</div>
                    </div>
                </div>
                <div class="session-costs" id="sessionCosts">
                    <div style="text-align: center; color: #8b949e;">Loading costs...</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Initialize Socket.IO connection
        const socket = io();
        let lastUpdateTime = new Date();

        // Connection handlers
        socket.on('connect', function() {
            console.log('Connected to dashboard server');
            updateConnectionStatus(true);
            refreshAll();
        });

        socket.on('disconnect', function() {
            console.log('Disconnected from dashboard server');
            updateConnectionStatus(false);
        });

        // Live updates via WebSocket
        socket.on('status_update', function(data) {
            console.log('Received status update:', data);
            updateWorkers(data.workers || []);
            updateExperiments(data.experiments || []);
            updatePendingChanges(data.pending_changes || []);
            updateCosts(data.costs || {});
            updateLastUpdated();
        });

        socket.on('change_approved', function(data) {
            console.log('Change approved:', data);
            showNotification(`Change ${data.change_id} approved!`);
            refreshPendingChanges();
        });

        function updateConnectionStatus(connected) {
            const statusDot = document.querySelector('.status-dot');
            const statusText = document.querySelector('.status-indicator span');

            if (connected) {
                statusDot.style.background = '#3fb950';
                statusText.textContent = 'Connected';
            } else {
                statusDot.style.background = '#f85149';
                statusText.textContent = 'Disconnected';
            }
        }

        function updateLastUpdated() {
            lastUpdateTime = new Date();
            document.getElementById('lastUpdated').textContent =
                `Last updated: ${lastUpdateTime.toLocaleTimeString()}`;
        }

        // Data fetching functions
        async function fetchWorkers() {
            try {
                const response = await fetch('/status');
                const data = await response.json();
                updateWorkers(data.workers || []);
                document.getElementById('workerCount').textContent = data.total_workers || 0;
            } catch (error) {
                console.error('Error fetching workers:', error);
            }
        }

        async function fetchExperiments() {
            try {
                const response = await fetch('/experiments');
                const data = await response.json();
                updateExperiments(data.experiments || []);
                document.getElementById('experimentCount').textContent = data.total_experiments || 0;
            } catch (error) {
                console.error('Error fetching experiments:', error);
            }
        }

        async function fetchPendingChanges() {
            try {
                const response = await fetch('/pending-changes');
                const data = await response.json();
                updatePendingChanges(data.changes || []);
                document.getElementById('changesCount').textContent = data.total_pending || 0;
            } catch (error) {
                console.error('Error fetching pending changes:', error);
            }
        }

        async function fetchCosts() {
            try {
                const response = await fetch('/costs');
                const data = await response.json();
                updateCosts(data);
            } catch (error) {
                console.error('Error fetching costs:', error);
            }
        }

        // UI update functions
        function updateWorkers(workers) {
            const panel = document.getElementById('workersPanel');

            if (workers.length === 0) {
                panel.innerHTML = '<div style="text-align: center; color: #8b949e;">No active workers</div>';
                return;
            }

            panel.innerHTML = workers.map(worker => `
                <div class="worker">
                    <div class="worker-header">
                        <span class="worker-id">${worker.id}</span>
                        <span class="worker-status status-${worker.status}">${worker.status}</span>
                    </div>
                    <div class="worker-task">${worker.task}</div>
                    <div class="worker-meta">
                        <span>Cost: $${worker.cost}</span>
                        <span>${worker.last_update}</span>
                    </div>
                </div>
            `).join('');
        }

        function updateExperiments(experiments) {
            const panel = document.getElementById('experimentsPanel');

            if (experiments.length === 0) {
                panel.innerHTML = '<div style="text-align: center; color: #8b949e;">No experiments found</div>';
                return;
            }

            panel.innerHTML = experiments.map(exp => `
                <div class="experiment">
                    <div class="experiment-name">${exp.name}</div>
                    <div class="experiment-preview">${exp.preview}</div>
                    <div style="font-size: 0.8rem; color: #8b949e; margin-top: 0.5rem;">
                        ${exp.timestamp}
                    </div>
                </div>
            `).join('');
        }

        function updatePendingChanges(changes) {
            const panel = document.getElementById('changesPanel');

            if (changes.length === 0) {
                panel.innerHTML = '<div style="text-align: center; color: #8b949e;">No pending changes</div>';
                return;
            }

            panel.innerHTML = changes.map(change => `
                <div class="pending-change">
                    <div class="change-description">${change.description}</div>
                    <div class="change-files">Files: ${change.files.join(', ')}</div>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span style="font-size: 0.8rem; color: #8b949e;">${change.timestamp}</span>
                        <button class="approve-btn" onclick="approveChange('${change.id}')">
                            Approve
                        </button>
                    </div>
                </div>
            `).join('');
        }

        function updateCosts(costs) {
            document.getElementById('totalCost').textContent = `$${costs.total || 0}`;

            const sessionCosts = costs.by_session || {};
            const sessionCount = Object.keys(sessionCosts).length;
            document.getElementById('activeSessions').textContent = sessionCount;

            const sessionPanel = document.getElementById('sessionCosts');

            if (sessionCount === 0) {
                sessionPanel.innerHTML = '<div style="text-align: center; color: #8b949e;">No session data</div>';
                return;
            }

            sessionPanel.innerHTML = Object.entries(sessionCosts)
                .sort(([,a], [,b]) => b - a)
                .map(([session, cost]) => `
                    <div class="session-cost">
                        <span>${session}</span>
                        <span>$${cost}</span>
                    </div>
                `).join('');
        }

        // Action functions
        async function approveChange(changeId) {
            try {
                const response = await fetch(`/approve/${changeId}`, {
                    method: 'POST'
                });
                const data = await response.json();

                if (data.status === 'approved') {
                    showNotification(`Change ${changeId} approved successfully!`);
                    refreshPendingChanges();
                } else {
                    showNotification(`Error approving change: ${data.error}`, 'error');
                }
            } catch (error) {
                console.error('Error approving change:', error);
                showNotification('Error approving change', 'error');
            }
        }

        function refreshAll() {
            fetchWorkers();
            fetchExperiments();
            fetchPendingChanges();
            fetchCosts();
            updateLastUpdated();
        }

        function refreshPendingChanges() {
            fetchPendingChanges();
        }

        function showNotification(message, type = 'success') {
            // Simple notification system
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 1rem;
                background: ${type === 'error' ? '#f85149' : '#238636'};
                color: white;
                border-radius: 4px;
                z-index: 1000;
                animation: slideIn 0.3s ease;
            `;
            notification.textContent = message;

            document.body.appendChild(notification);

            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }

        // Add slide animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); }
                to { transform: translateX(0); }
            }
            @keyframes slideOut {
                from { transform: translateX(0); }
                to { transform: translateX(100%); }
            }
        `;
        document.head.appendChild(style);

        // Initial load
        refreshAll();

        // Auto-refresh every 30 seconds
        setInterval(refreshAll, 30000);
    </script>
</body>
</html>